<?xml version="1.0" encoding="utf-8"?>
<resources>


        <style name="AppButtonStyle" parent="Widget.AppCompat.Button">
                <item name="android:layout_width">match_parent</item>
                <item name="android:layout_height">wrap_content</item>
                <item name="android:paddingVertical">15dp</item>
                <item name="android:textAllCaps">false</item>
                <item name="android:background">@drawable/background_button_with_gradient</item>
                <item name="android:fontFamily">@font/poppins_semibold</item>
                <item name="android:textColor">@color/white</item>
                <item name="android:textSize">16sp</item>
        </style>

        <style name="AppEditText">
                <item name="android:background">@drawable/background_login_edittext</item>
                <item name="android:paddingVertical">12dp</item>
                <item name="android:paddingHorizontal">15dp</item>
                <item name="android:textSize">16sp</item>
                <item name="android:maxLines">1</item>
                <item name="android:textColor">@color/black_414141</item>
                <item name="android:fontFamily">@font/poppins_medium</item>
        </style>
</resources>