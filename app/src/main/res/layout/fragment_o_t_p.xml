<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.app.zovent.ui.main.view_model.OTPViewModel" />

    </data>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <!-- Logo -->
            <ImageView
                android:id="@+id/backButton"
                android:onClick="@{viewModel::onClick}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="68dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/back_button_blue"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Welcome Text -->
            <TextView
                android:gravity="center_horizontal"
                android:id="@+id/welcomeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:layout_marginHorizontal="16dp"
                android:text="verify your Email address"
                android:textSize="20sp"
                android:textColor="@color/black_2A2A2A"
                android:fontFamily="@font/poppins_medium"
                app:layout_constraintTop_toBottomOf="@id/backButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="16dp"
                android:text="Enter OTP code"
                android:textSize="16sp"
                android:textColor="@color/black_60"
                android:fontFamily="@font/poppins_medium"
                app:layout_constraintTop_toBottomOf="@id/backButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
            <LinearLayout
                android:id="@+id/llPinView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="32dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="6">

                <EditText
                    style="@style/OtpEditTextStyle"
                    android:id="@+id/etOtp1"
                    android:text="@={viewModel.otp1}" />

                <EditText
                    style="@style/OtpEditTextStyle"
                    android:id="@+id/etOtp2"
                    android:text="@={viewModel.otp2}" />

                <EditText
                    style="@style/OtpEditTextStyle"
                    android:id="@+id/etOtp3"
                    android:text="@={viewModel.otp3}" />

                <EditText
                    style="@style/OtpEditTextStyle"
                    android:id="@+id/etOtp4"
                    android:text="@={viewModel.otp4}" />

                <EditText
                    style="@style/OtpEditTextStyle"
                    android:id="@+id/etOtp5"
                    android:text="@={viewModel.otp5}" />

                <EditText
                    style="@style/OtpEditTextStyle"
                    android:id="@+id/etOtp6"
                    android:text="@={viewModel.otp6}" />
            </LinearLayout>

            <TextView
                android:id="@+id/resendOtp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/black_323434"
                android:text="Didnâ€™t receive code? Resend again"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/poppins_regular"/>

            <androidx.appcompat.widget.AppCompatButton
                android:onClick="@{viewModel::onClick}"
                android:id="@+id/verifyButton"
                style="@style/AppButtonStyle"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="32dp"
                android:text="Verify" />



        </LinearLayout>

    </ScrollView>

</layout>