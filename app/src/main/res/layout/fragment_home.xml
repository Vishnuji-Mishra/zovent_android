<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.app.zovent.ui.main.view_model.HomeViewModel" />

        <variable
            name="clickEvent"
            type="kotlin.jvm.functions.Function1&lt;java.lang.Integer, kotlin.Unit>" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="67dp"
        tools:context=".ui.main.fragment.HomeFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:onClick="@{()->clickEvent.invoke(0)}"
                android:id="@+id/sideMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:src="@drawable/side_menu_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:fontFamily="@font/poppins_semibold"
                android:includeFontPadding="false"
                android:text="Dashboard"
                android:textColor="@color/theme"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@id/sideMenu"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/viewLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@color/horizontal_view"
            app:layout_constraintTop_toBottomOf="@+id/headerLayout" />

        <androidx.core.widget.NestedScrollView
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewLine"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <androidx.recyclerview.widget.RecyclerView
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/countDataRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="16dp"
                    android:nestedScrollingEnabled="false"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="2"
                    tools:listitem="@layout/adapter_dashboard_count_data" />
                <androidx.cardview.widget.CardView
                    android:id="@+id/graphCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="20dp"
                    android:elevation="5dp"
                    app:cardCornerRadius="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/countDataRecycler">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="16dp"
                        android:paddingTop="5dp"
                        android:paddingHorizontal="16dp">

                        <TextView
                            android:id="@+id/salesActivityLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="Sales Activity"
                            android:textColor="#243465"
                            android:textSize="16sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                        <com.google.android.material.card.MaterialCardView
                            app:cardCornerRadius="8dp"
                            app:strokeColor="@color/horizontal_view"
                            app:strokeWidth="1dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="@+id/salesActivityLabel"
                            app:layout_constraintBottom_toBottomOf="@+id/salesActivityLabel"
                            app:layout_constraintEnd_toEndOf="parent">
                            <Spinner
                                android:paddingHorizontal="5dp"
                                android:id="@+id/spinnerDateRange"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:spinnerMode="dropdown"/>

                        </com.google.android.material.card.MaterialCardView>
                        <com.github.mikephil.charting.charts.LineChart
                            app:layout_constraintTop_toBottomOf="@id/salesActivityLabel"
                            android:id="@+id/lineChart"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_marginTop="8dp"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="20dp"
                    android:elevation="5dp"
                    app:cardCornerRadius="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/graphCardView">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="16dp"
                        android:paddingHorizontal="16dp">

                        <TextView
                            android:id="@+id/pieChartLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="Pie Chart"
                            android:textColor="#243465"
                            android:textSize="16sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                        <View
                            android:layout_marginStart="10dp"
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:background="@color/horizontal_view"
                            app:layout_constraintTop_toTopOf="@id/pieChartLabel"
                            app:layout_constraintBottom_toBottomOf="@id/pieChartLabel"
                            app:layout_constraintStart_toEndOf="@id/pieChartLabel"
                            app:layout_constraintEnd_toEndOf="parent"/>
                        <com.github.mikephil.charting.charts.PieChart
                            android:id="@+id/pieChart"
                            android:layout_width="match_parent"
                            android:layout_height="240dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="16dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/pieChartLabel"/>


<!--                        <com.github.mikephil.charting.charts.PieChart-->
<!--                            android:id="@+id/pieChart"-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="400dp"-->
<!--                            app:layout_constraintBottom_toBottomOf="parent"-->
<!--                            app:layout_constraintTop_toBottomOf="@id/pieChartLabel"-->
<!--                            />-->

<!--                        <com.anychart.AnyChartView-->
<!--                            android:id="@+id/pieChart"-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="400dp"-->
<!--                            app:layout_constraintBottom_toBottomOf="parent"-->
<!--                            app:layout_constraintTop_toBottomOf="@id/pieChartLabel" />-->

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>